{
  "name": "angela-spa",
  "version": "1.0.0",
  "private": true,
  "description": "Landing pages com analytics e A/B testing para Angela Spa & EstÃ©tica",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "web:dev": "npm run dev -w apps/web",
    "api:dev": "npm run dev -w apps/api",
    "web:build": "npm run build -w apps/web",
    "api:build": "npm run build -w apps/api",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
